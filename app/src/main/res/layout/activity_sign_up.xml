<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_one">

    <TextView
        android:id="@+id/text_view_android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_margin="16dp"
        android:textStyle="italic"/>
    <TextView
        android:id="@+id/text_view_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign Up"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/text_view_android"
        android:layout_marginTop="80dp"
        android:textSize="25dp"/>


    <EditText
        android:id="@+id/edit_text_first_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="First Name"
        android:layout_below="@+id/text_view_sign_up"
        android:layout_margin="16dp"
        android:textColor="@color/Purple"
        android:background="#C54B8C"
        android:textSize="20dp"
        android:inputType="text"/>

    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/edit_text_first_name"
        android:layout_margin="16dp"
        android:hint="Email address"
        android:textSize="20dp"
        android:background="#C54B8C"
        android:inputType="textEmailAddress"/>

    <EditText
        android:id="@+id/edit_text_login"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/edit_text_email"
        android:layout_margin="16dp"
        android:hint="Your login"
        android:textSize="20dp"
        android:background="#C54B8C"/>

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/edit_text_login"
        android:layout_margin="16dp"
        android:hint="Password"
        android:textSize="20dp"
        android:background="#C54B8C"
        android:inputType="textWebPassword"/>

    <Button
        android:id="@+id/button_sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_password"
        android:layout_margin="16dp"
        android:background="#dda0dd"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/text_view_subscribe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_sign_up"
        android:layout_margin="16dp"
        android:text="Subscribe to newsletter"
        />

    <TextView
        android:id="@+id/text_view_sign_in"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button_sign_up"
        android:layout_alignParentRight="true"
        android:text="Sign In"
        android:gravity="right"
        android:layout_margin="16dp"
        />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_one">

    <TextView
        android:id="@+id/text_view_android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Android"
        android:textColor="#ffffff"
        android:gravity="center"
        android:textSize="25dp"
        android:layout_margin="16dp"
        android:textStyle="italic"/>

    <TextView
        android:id="@+id/text_view_pass_reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:textColor="@color/White"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_below="@+id/text_view_android"
        android:layout_marginTop="150dp"
        android:textSize="25dp"/>

    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:hint="Email"
        android:layout_below="@+id/text_view_pass_reset"
        android:layout_marginLeft = "16dp"
        android:layout_marginRight="16dp"
        android:textColor="@color/Purple"
        android:background="#C54B8C"
        android:textSize="20dp"
        android:layout_marginTop="50dp"/>

    <Button
        android:id="@+id/button_send_new_pass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_text_email"
        android:layout_margin="16dp"
        android:background="#dda0dd"
        android:text="Send"
        android:textAllCaps="false"
        android:textColor="@color/White"
        android:textSize="18dp"/>

    <TextView
        android:id="@+id/text_view_go_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button_send_new_pass"
        android:layout_margin="16dp"
        android:text=" Back to Sign In"
        />

</RelativeLayout>